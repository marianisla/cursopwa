<ul class="demo-list-icon mdl-list">
    {{#listaProductos}}
    <li class="mdl-list__item">
        <span class="mdl-list__item-primary-content w-10">
            <i class="material-icons">shopping_cart</i>
        </span>
        <span class="mdl-list__item-primary-content w-30">
            {{nombre}}
        </span>
        <span class="mdl-list__item-primary-content w-20">
            <div class="mdl-textfield mdl-js-textfield">
                <input onchange="cambiarCantidad({{id}}, this)" class="mdl-textfield__input" type="text"
                    id="cantidad-{{@index}}" value="{{cantidad}}">
                <label class="mdl-textfield__label" for="cantidad-{{@index}}">Cantidad</label>
            </div>
        </span>
        <span class="mdl-list__item-primary-content w-20 ml-20">
            <div class="mdl-textfield mdl-js-textfield">
                <input onchange="cambiarPrecio({{id}}, this)" class="mdl-textfield__input" type="text"
                    id="precio-{{@index}}" value="{{precio}}">
                <label class="mdl-textfield__label" for="precio-{{@index}}">Precio</label>
            </div>
        </span>
        <span class="mdl-list__item-primary-content w-20">
            <button onclick="Api.deleteItem({{id}})"
                class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored ml-20">
                <i class="material-icons">remove_shopping_cart</i>
            </button>
        </span>
    </li>
    {{/listaProductos}}
</ul>